@using Relink.PL.Providers;

<a href="#openstatusmap"><p class="header hoverable_underline ">Status</p></a>
<div id="openstatusmap" class="modalDialog_fromright inactivewhenoffile" style="width: 600px;">
	<div class="container">
		<a href="#close" title="Закрыть" class="close" style="right: -324px; top: -5px;">X</a>
		<div class="statusmap">
			<p class="header">User: homk</p>
			<div class="statusbox">
				<p>Reg date: 01:01:0001</p>
			</div>
			<div class="statusbox">
				<p>Neuromancer rating: @(LogicProvider.userLogic.GetNeuromancerRating(LogicProvider.user))</p>
				<p>Relink rating: @(LogicProvider.userLogic.GetRelinkRating(LogicProvider.user))</p>
			</div>
			<div class="statusbox">
				<p id="money">Money: @(LogicProvider.userLogic.GetMoney(LogicProvider.user))$</p>
				<p id="moneyinbank">Money on a back accout: @(LogicProvider.userLogic.GetMoneyBank(LogicProvider.user))$</p>
			</div>

			<p class="header">Gate: Alpha</p>
			<div class="statusbox">
				<p>Gateway: @(LogicProvider.gate[0].Name)</p>
				@foreach (var item in LogicProvider.hardware)
				{
					<p>@item.Name;</p>
				}
			</div>

		</div>
	</div>
</div>